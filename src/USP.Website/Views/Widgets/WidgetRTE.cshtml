@using USP.Business.Models.ContentModels
@inherits UmbracoViewPage<WidgetRte>
@functions {
    private string GetColor()
    {
        var color = Model.TableColour as string;
        return !string.IsNullOrWhiteSpace(color) ? color.ToLower() : "";
    }

}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2 mb-50 rte" data-table-color="@GetColor()">
            @Model.Text
        </div>
    </div>
</div>