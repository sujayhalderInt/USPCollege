@using USP.Business.Models.ContentModels
@inherits UmbracoViewPage<WidgetEnquiryForm>

@if (Model == null || Model.SelectForm == null)
{
    return;
}


@if (Request.QueryString["dtgePreview"] == "1")
{
    if (Model.SelectForm != null && !string.IsNullOrEmpty(Model.SelectForm.ToString()))
    {
        @Umbraco.RenderMacro("renderUmbracoForm", new { FormGuid = Model.SelectForm, ExcludeScripts = "0" })
    }
    else
    {
        <p>Edit Form</p>
    }
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                @*<p class="under-headline mb-20">@Model.Title</p>*@
                <h2>@Model.Title</h2>

                <p class="mb-30">@Html.Raw(Model.SubTitle)</p>

                @if (Model.SelectForm != null && !string.IsNullOrEmpty(Model.SelectForm.ToString()))
                {
                    @Umbraco.RenderMacro("renderUmbracoForm", new { FormGuid = Model.SelectForm, ExcludeScripts = "0" })
                }

            </div>
        </div>
    </div>
}

