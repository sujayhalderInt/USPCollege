@using USP.Business.Models.ContentModels
@inherits UmbracoViewPage<WidgetTimeline>

@{
    if (Model == null || Model.Items == null || !Model.Items.Any())
    {
        return;
    }
}

<section class="container mb-50">
    <div class="row">
        <div class="col-md-8 offset-md-2" role="contentinfo" aria-label="timeline info area">
            @if (!string.IsNullOrWhiteSpace(Model.Title))
            {
                <h2>@Model.Title</h2>
            }
            @if (Model.Description != null)
            {
                @Model.Description
            }
            <dl class="timeline">
                @foreach (var item in Model.TimelineList)
                {

                    <dt>@item.Title</dt>
                    <dd>
                        @if (!string.IsNullOrWhiteSpace(item.Subtitle))
                        {
                            <h4>@item.Subtitle</h4>
                        }
                            @item.Description
                    </dd>
                }
            </dl>
        </div>
    </div>
</section>
      
