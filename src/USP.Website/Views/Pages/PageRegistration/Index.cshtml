@using USP.Business.Extensions
@using USP.Business.Models.ContentModels
@inherits UmbracoViewPage<PageRegistration>
@{
    Layout = "~/Views/_ContentLayout.cshtml";
}
@Html.Partial("ArticleGrid", Model)
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            @{
                if (!string.IsNullOrEmpty(Model.Heading))
                {
                    <h2>@Model.Heading</h2>
                }
            }
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="highlight">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        @{
                            if (!string.IsNullOrEmpty(Model.TextGreeting))
                            {
                                <p>@Model.TextGreeting</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            @{
                if (!string.IsNullOrEmpty(Model.SubHeading) && !Model.LoginPage.IsNullOrEmpty() && !string.IsNullOrEmpty(Model.LoginPageLinkText))
                {
                    <p class="under-headline mb-20">@Model.SubHeading <a href="@Model.LoginPageUrlWithReturnUrl">@Model.LoginPageLinkText</a></p>
                }
            }
            @if (!string.IsNullOrEmpty(Model.Information))
            {
                <p class="mb-30">@Model.Information</p>
            }
            @Html.ValidationSummary()
            @Html.Partial("RegistrationForm", Model)
        </div>
    </div>
</div>
