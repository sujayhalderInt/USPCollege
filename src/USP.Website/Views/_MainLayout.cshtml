    <script src="https://kingsora.github.io/_framework/js/jquery.overlayScrollbars.js?cdv=@instanceVersion"></script>
    <script src="/assets/js/vendors/jquery.history.min.js?cdv=@instanceVersion"></script>
    <script src="/assets/js/vendors/cssrelpreload.js?cdv=@instanceVersion"></script>
    <script src="/assets/js/vendors/loadCSS.js?cdv=@instanceVersion"></script>

    <script src="/assets/js/app.js?cdv=@instanceVersion"></script>
    <script defer src="/assets/js/components.js?cdv=@instanceVersion"></script>

    @RenderSection("PageScript", false)
    @*USP-1_14/12/2020 Begin*@
    <script type="text/javascript">
        $(function () {
            $('body').on("click", function () {
                if ($("#flying-focus").hasClass("flying-focus_visible")) {
                    $("#flying-focus").removeClass("flying-focus_visible");
                };
            });
        });
    </script>

    <div class="newDropdown">
        <button onclick="helpSubMenu()" class="dropbtn fa fa-wheelchair"></button>
        <div id="helpDropdown" class="newDropdown-content">
            <a href="#" class="sideMenuOption" id="increaseText" onclick="increaseText(); return false;"><i class="fa fa-search-plus fafa-space"></i>Increase Text</a>
            <a href="#" class="sideMenuOption" id="decreaseText" onclick="decreaseText(); return false;"><i class="fa fa-search-minus fafa-space"></i>Decrease Text</a>
            <a href="#" class="sideMenuOption" id="normalText" onclick="normalText(); return false;"><i class="fa fa-font fafa-space"></i>Normal Font</a>
            <a href="#" class="sideMenuOption" id="darkBackGround" onclick="darkBackGround(); return false;"><i class="fa fa-share-square fafa-space"></i>Dark Background</a>
            <a href="#" class="sideMenuOption" id="lightBackground" onclick="lightBackground(); return false;"><i class="fa fa-share-square-o fafa-space"></i>Light Background</a>
            <a href="#" class="sideMenuOption" id="reset" onclick="resetAll(); return false;"><i class="fa fa-refresh fafa-space"></i>Reset</a>
        </div>
    </div>
    @*USP-1_14/12/2020 End*@
</body>
</html>

