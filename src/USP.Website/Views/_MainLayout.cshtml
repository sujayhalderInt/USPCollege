    @*USP-1_14/12/2020 Begin*@
    <script>
        /* When the user clicks on the button,
        toggle between hiding and showing the dropdown content */
        function helpSubMenu() {
            document.getElementById("helpDropdown").classList.toggle("show");
        }

        // Close the dropdown if the user clicks outside of it
        window.onclick = function (event) {
            if (!event.target.matches('.dropbtn') && !event.target.matches('.sideMenuOption')) {
                var dropdowns = document.getElementsByClassName("newDropdown-content");
                var i;
                for (i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        }

        function increaseText() {
            $('#decreaseText').removeClass('activeSideMenu');
            if ($("body").hasClass("usp-resize-font-115") == false &&
                $("body").hasClass("usp-resize-font-120") == false &&
                $("body").hasClass("usp-resize-font-125") == false) {
                $('body').addClass('usp-resize-font-115');
            }
            else if ($("body").hasClass("usp-resize-font-115") == true) {
                $('body').removeClass('usp-resize-font-115');
                $('body').addClass('usp-resize-font-120');
            }
            else if ($("body").hasClass("usp-resize-font-120") == true) {
                $('body').removeClass('usp-resize-font-120');
                $('body').addClass('usp-resize-font-125');
            }
            $('#increaseText').addClass('activeSideMenu');
        }
        function decreaseText() {
            $('#increaseText').removeClass('activeSideMenu');
            if ($("body").hasClass("usp-resize-font-115") == true) {
                $('body').removeClass('usp-resize-font-115');
            }
            else if ($("body").hasClass("usp-resize-font-120") == true) {
                $('body').removeClass('usp-resize-font-120');
                $('body').addClass('usp-resize-font-115');
            }
            else if ($("body").hasClass("usp-resize-font-125") == true) {
                $('body').removeClass('usp-resize-font-125');
                $('body').addClass('usp-resize-font-120');
            }
            $('#decreaseText').addClass('activeSideMenu');
        }
        function normalText() {
            if ($("body").hasClass("usp-readable-font") == false) {
                $('body').addClass('usp-readable-font');
                $('#normalText').addClass('activeSideMenu');
            }
            else {
                $('body').removeClass('usp-readable-font');
                $('#normalText').removeClass('activeSideMenu');
            }
        }
        function darkBackGround() {
            $('#lightBackground').removeClass('activeSideMenu');
            if ($("body").hasClass("usp-high-contrast") == false) {
                $('body').removeClass('usp-light-background');
                $('body').addClass('usp-high-contrast');
                $('#darkBackGround').addClass('activeSideMenu');
            }
            else {
                $('body').removeClass('usp-high-contrast');
                $('#darkBackGround').removeClass('activeSideMenu');
            }
        }
        function lightBackground() {
            $('#darkBackGround').removeClass('activeSideMenu');
            if ($("body").hasClass("usp-light-background") == false) {
                $('body').removeClass('usp-high-contrast');
                $('body').addClass('usp-light-background');
                $('#lightBackground').addClass('activeSideMenu');
            }
            else {
                $('body').removeClass('usp-light-background');
                $('#lightBackground').removeClass('activeSideMenu');
            }
        }
        function resetAll() {
            $('body').removeClass('usp-resize-font-115');
            $('body').removeClass('usp-resize-font-120');
            $('body').removeClass('usp-resize-font-125');
            $('body').removeClass('usp-readable-font');
            $('body').removeClass('usp-high-contrast');
            $('body').removeClass('usp-light-background');
            $('.sideMenuOption').removeClass('activeSideMenu');
        }
    </script>
    @*USP-1_14/12/2020 End*@
    @Html.Action("Cookies", "CookiePolicy")

    <header class="header">
        <nav class="menu">
            @Html.Action("Navigation", "Navigation")
            <ul class="menu__tertiary" role="menubar">
                <li role="menuitem" class="mobile-only"><a href="/" class="menu__logo--mobile"><img src="/assets/img/logo.png" alt="logo"></a></li>
                @Html.Action("SignUp", "Navigation")
                <li role="menuitem"><a class="header-search-btn" href="@Umbraco.GetSearchUrl()"><i class="icon-search" aria-hidden="true"></i> @library.GetDictionaryItem("Global Search.Labels.SearchMenuText")</a></li>
                @Html.Action("RenderApply", "Navigation")
            </ul>
        </nav>
        @*@Html.Action("RenderGlobalSearch", "Navigation")*@
        <div class="header-search">
            <form class="search" role="search" method="get" action="/search/">
                <div class="container">
                    <div class="row">
                        <div class="col-12 text-right">
                            <a class="header-search-close" href="#"><i class="icon-close" aria-hidden="true"></i> Close</a>
                        </div>
                    </div>
                    <div class="row align-items-end">
                        <div class="col-md-6">
                            <div class="form__check mb-0">
                                <label for="single-select" class="form__check__label">Search For</label>
                                <p class="select-wrapper">
                                    <select id="single-select">
                                        <option value="/search/">Everything</option>
                                        <option value="/careers-and-courses/">Courses and careers</option>
                                    </select>
                                </p>
                            </div>
                        </div><!-- end col-md-6 -->
                        <div class="col-md-6">

                            <div class="hero-search__form" role="search">
                                <div class="search mb-0">
                                    <label for="global-search"><span class="sr-only">Search For</span></label>
                                    <input type="search" autocomplete="off" id="global-search" name="term" placeholder="Search for course or career" data-predictive="/umbraco/api/PredictiveSearch/getresults">
                                    <input class="btn btn--inline" type="submit" id="btn-global-search" value="Find">
                                </div>
                                <div class="hero-search__results hidden">

                                </div>
                            </div>

                        </div><!-- end col-md-6 -->

                    </div>
                </div>
            </form>
        </div>
    </header>

    <main id="mainContent">
        @RenderBody()
    </main>

    @Html.Action("RenderFooter", "Footer")
