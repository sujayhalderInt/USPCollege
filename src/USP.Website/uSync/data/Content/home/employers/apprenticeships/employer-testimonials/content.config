                    "value": {
                      "name": "Quote",
                      "portrait": "",
                      "quoteText": "Apprentices are in a very strong position to be offered permanent positions within the practice at the end of their course.\n\nThe college has been very proactive in trying to place the right candidates for each office.",
                      "citation": "MSB & Co Accountants"
                    },
                    "id": "7a460eb4-9ce7-2362-3935-fbe7d82bee3e"
                  },
                  "editor": {
                    "alias": "docTypeWidgetQuote"
